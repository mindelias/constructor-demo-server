# API Gateway Configuration

# Gateway Port
GATEWAY_PORT=8080

# JWT Secret (should match your auth service)
JWT_SECRET=your-super-secret-jwt-key

# CORS Configuration
CORS_ORIGIN=*

# Service URLs (change these when you split services)
AUTH_SERVICE_URL=http://localhost:3000
PRODUCT_SERVICE_URL=http://localhost:3000
ORDER_SERVICE_URL=http://localhost:3000
RECOMMENDATION_SERVICE_URL=http://localhost:3000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Environment
NODE_ENV=development
